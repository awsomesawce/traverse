# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.json]
indent_size = 2

[*.sh]
end_of_line = lf
indent_size = 4

[*.ps1]
end_of_line = crlf
indent_size = 4

[Makefile]
end_of_line = lf
indent_size = 8
indent_style = tab

[*{.yml,.yaml}]
indent_style = space
indent_size = 2